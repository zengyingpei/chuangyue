.container {
  width: 690rpx;
  margin: 20rpx auto;
  border: 1px solid #eee;
  border-radius: 20rpx;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.06);
}
.container .title {
  font-size: 50rpx;
  font-weight: bold;
  padding-top: 5rpx;
  padding-left: 10rpx;
  margin-bottom: 15rpx;
}
.container .swiper {
  height: 520rpx;
}
.container .swiper-item .content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
}
.container .swiper-item .content .card {
  margin: 5rpx 10rpx;
  height: 250rpx;
  width: 660rpx;
  border-radius: 20rpx;
  display: flex;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.1);
}
.container .swiper-item .content .card .left_img {
  margin: 20rpx 20rpx;
  width: 200rpx;
  height: 200rpx;
}
.container .swiper-item .content .card .left_img .images {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.container .swiper-item .content .card .right_info .info_top {
  width: 420rpx;
  height: 66rpx;
  overflow: hidden;
  padding-top: 20rpx;
}
.container .swiper-item .content .card .right_info .info_top .name {
  font-weight: bold;
  font-size: 50rpx;
  margin-right: 10rpx;
}
.container .swiper-item .content .card .right_info .info_top .description {
  font-size: 28rpx;
}
.container .swiper-item .content .card .right_info .info_bom {
  margin-top: 5rpx;
}
.container .swiper-item .content .card .right_info .info_bom .info_bom_up {
  font-size: 28rpx;
  font-style: italic;
  margin-bottom: 5rpx;
}